{
  "private": true,
  "description": "Modified Tailwind for CitizenNet user interfaces",
  "author": "Thomas Honeyman <hello@thomashoneyman.com>",
  "keywords": [
    "tailwind",
    "citizennet",
    "webpack"
  ],
  "scripts": {
    "build-dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --config=webpack.dev.config.js && mv dist/cn-tailwind.css ../dist/cn-tailwind.css",
    "build-prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --config=webpack.prod.config.js && mv dist/cn-tailwind.css ../dist/cn-tailwind.min.css"
  },
  "devDependencies": {
    "cross-env": "^5.1",
    "css-loader": "0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "glob-all": "^3.1.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss": "^6.0.16",
    "postcss-loader": "^2.0.10",
    "purgecss-webpack-plugin": "^0.19.0",
    "style-loader": "^0.19.1",
    "tailwindcss": "^0.4.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}
